{
  "compilerOptions": {
    "target": "ESNext",                     // latest JS features
    "module": "ESNext",                     // Vite ke liye ESNext module
    "moduleResolution": "bundler",          // ðŸ‘ˆ Vite/modern bundler friendly
    "strict": true,                         // strict type checking                    // Vue ke liye JSX preserve
    "allowJs": true,                        // JS files bhi allow honge
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],               // Browser + latest JS
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]                      // @ ko src se map karega
    },
    "noEmit": true                          // ðŸ‘ˆ Output JS generate nahi karega (sirf type check)
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
